<config>
    <modules>
        <FireGento_AlternativeContentStorage>
            <version>0.1.0</version>
        </FireGento_AlternativeContentStorage>
    </modules>
    <global>
        <models>
            <acs>
                <class>FireGento_AlternativeContentStorage_Model</class>
            </acs>
        </models>
        <helpers>
            <acs>
                <class>FireGento_AlternativeContentStorage_Helper</class>
            </acs>
        </helpers>
        <blocks>
            <acs>
                <class>FireGento_AlternativeContentStorage_Block</class>
            </acs>
        </blocks>
        <events>
            <cms_page_save_after>
                <observers>
                    <acs>
                        <type>singleton</type>
                        <class>acs/observer</class>
                        <method>afterCmsPageSave</method>
                    </acs>
                </observers>
            </cms_page_save_after>
            <cms_block_save_after>
                <observers>
                    <acs>
                        <type>singleton</type>
                        <class>acs/observer</class>
                        <method>afterCmsBlockSave</method>
                    </acs>
                </observers>
            </cms_block_save_after>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <acs after="Mage_Adminhtml">FireGento_AlternativeContentStorage</acs>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <FireGento_AlternativeContentStorage>
                    <files>
                        <default>FireGento_AlternativeContentStorage.csv</default>
                    </files>
                </FireGento_AlternativeContentStorage>
            </modules>
        </translate>
        <layout>
            <updates>
                <acs>
                    <file>acs.xml</file>
                </acs>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <acs>
            <content_cms_block>
                <trigger>auto</trigger>
                <storage>file</storage>
            </content_cms_block>
            <content_cms_page>
                <trigger>auto</trigger>
                <storage>file</storage>
            </content_cms_page>
            <content_email_template>
                <trigger>auto</trigger>
                <storage>file</storage>
            </content_email_template>
        </acs>
    </default>
    <phpunit>
        <suite>
            <modules>
                <FireGento_AlternativeContentStorage />
            </modules>
        </suite>
    </phpunit>
</config>
