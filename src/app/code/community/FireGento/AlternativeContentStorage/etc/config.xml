<config>
    <modules>
        <FireGento_AlternativeContentStorage>
            <version>0.1.0</version>
        </FireGento_AlternativeContentStorage>
    </modules>
    <global>
        <models>
            <acs>
                <class>FireGento_AlternativeContentStorage_Model</class>
            </acs>
        </models>
        <helpers>
            <acs>
                <class>FireGento_AlternativeContentStorage_Helper</class>
            </acs>
        </helpers>
        <events>
            <cms_page_save_after>
                <observers>
                    <acs>
                        <type>singleton</type>
                        <class>acs/observer</class>
                        <method>afterCmsPageSave</method>
                    </acs>
                </observers>
            </cms_page_save_after>
        </events>
        <resources>
            <acs_setup>
                <setup>
                    <module>FireGento_AlternativeContentStorage</module>
                </setup>
            </acs_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <FireGento_AlternativeContentStorage>
                    <files>
                        <default>FireGento_AlternativeContentStorage.csv</default>
                    </files>
                </FireGento_AlternativeContentStorage>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <acs>
            <storage_file>
                <directory></directory>
            </storage_file>
        </acs>
    </default>
    <phpunit>
        <suite>
            <modules>
                <FireGento_AlternativeContentStorage/>
            </modules>
        </suite>
    </phpunit>
</config>
