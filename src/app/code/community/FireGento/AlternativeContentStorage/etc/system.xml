<config>
    <sections>
        <acs translate="label" module="acs">
            <label>Alternative Content Storage</label>
            <tab>advanced</tab>
            <sort_order>950</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <storage_file translate="label" module="acs">
                    <label>Storage: File</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <directory translate="label" module="acs">
                            <label>Storage Directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </directory>
                    </fields>
                </storage_file>

                <content_cms_block translate="label" module="acs">
                    <label>Content: CMS Block</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <storage translate="label" module="acs">
                            <label>Storage</label>

                            <frontend_type>select</frontend_type>
                            <source_model>acs/source_storage</source_model>

                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </storage>
                    </fields>
                </content_cms_block>

                <content_cms_page translate="label" module="acs">
                    <label>Content: CMS Page</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <storage translate="label" module="acs">
                            <label>Storage</label>

                            <frontend_type>select</frontend_type>
                            <source_model>acs/source_storage</source_model>

                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </storage>
                    </fields>
                </content_cms_page>

            </groups>
        </acs>
    </sections>
</config>
